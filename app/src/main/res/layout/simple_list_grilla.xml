<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_rojo"
        android:layout_width="41dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/txt_amarillo"
        android:background="@android:color/holo_red_dark"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceListItem"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txt_nro"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/holo_green_dark"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceListItem"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txt_repar"
        android:layout_width="98dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/txt_rojo"
        android:background="@android:color/darker_gray"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceListItem"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txt_sucur"
        android:layout_width="124dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/txt_repar"
        android:layout_toEndOf="@+id/txt_nro"
        android:background="@android:color/darker_gray"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceListItem"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txt_amarillo"
        android:layout_width="43dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:layout_toStartOf="@+id/txt_tipo_envio_grilla"
        android:background="@android:color/holo_orange_light"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceListItem"
        android:textColor="@color/colorBlack"
        android:textColorLink="#03A9F4"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/txt_tipo_envio_grilla"
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="172dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/background_light"
        android:shadowColor="#000000"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceListItem"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />


</RelativeLayout>